{
	"short_name": "React App",
	"name": "SRK suspender",
	"author": "Srikanth Reddy Kandula",
	"manifest_version": 2,
	"permissions": [
		"tabs",
		"storage",
		"unlimitedStorage",
		"history",
		"contextMenus",
		"http://*/*",
    	"https://*/*"
	],
	"browser_action": {
		"default_icon" : {
			"16" : "./assets/pause-16.png",
			"19" : "./assets/pause-24.png",
			"32" : "./assets/pause-32.png",
			"64" : "./assets/pause-64.png",
			"128": "./assets/pause-128.png"
		},
		"default_popup": "popup.html",
		"default_title": "TAB suspender"
	},
	"version": "1.0",
	"icons": {
		"16" : "./assets/pause-16.png",
		"24" : "./assets/pause-24.png",
		"32" : "./assets/pause-32.png",
		"64" : "./assets/pause-64.png",
		"128": "./assets/pause-128.png"
	},
	"browser_specific_settings": {
    	"edge": {
        	"browser_action_next_to_addressbar": true
    	}
	},
	"content_security_policy" : "script-src 'self'; object-src 'self'",

	"options_page": "options.html",
	"background" : {
        "scripts": ["background.bundle.js"],
        "persistent": true
    },
	"content_scripts": [{
		"matches": ["http://*/*", "https://*/*"],
		"js": ["suspended.bundle.js"]
	}]
}
